@model DemoSession4_ASPNET_CORE_MVC.Models.Product

@{
	ViewData["Title"] = "Add";
}

<h1>Add New Order</h1>

<hr />
<form method="post" asp-controller="product" asp-action="add" enctype="multipart/form-data">
	<table>
		<tr>
			<td>Name</td>
			<td> <input type="text" asp-for="Name" /></td>
		</tr>
		<tr>
			<td>Price</td>
			<td> <input type="text" asp-for="Price" /></td>
		</tr>
		<tr>
			<td>Phone</td>
			<td> <input type="text" asp-for="Quantity" /></td>
		</tr>
		<tr>
			<td>Address</td>
			<td> <textarea cols="20" rows="5" asp-for="Description"></textarea>  </td>
		</tr>
		<tr>
			<td>Status</td>
			<td> <input type="checkbox" asp-for="Status" /></td>
		</tr>
		<tr>
			<td>Photo</td>
			<td> <input type="file" name="file" /></td>
		</tr>
		<tr>
			<td>Payments</td>
			<td>
				<select asp-for="CategoryId">
					@foreach (var category in @ViewBag.categories)
					{
						<option value="@category.Id"> @category.Name</option>
					}
				</select>
			</td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td> <input type="submit" value="Create" /></td>
		</tr>

	</table>
</form>

<div>
	<a asp-action="Index">Back to List</a>
</div>

