<a asp-controller="product" asp-action="index">Back</a>
<br />
<table border="1">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
    </tr>
    <tr>
        <td>@ViewBag.product.Id</td>
        <td>@ViewBag.product.Name</td>
        <td><img src="~/images/@ViewBag.product.Photo" width="120" height="100" /></td>
        <td>@ViewBag.product.Price</td>
        <td>@ViewBag.product.Quantity</td>
        <td>@(ViewBag.product.Price * ViewBag.product.Quantity)</td>
    </tr>
</table>